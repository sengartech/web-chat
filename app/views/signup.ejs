<!DOCTYPE html>
<html>
<head>
  <% include ./partials/head.ejs %>
</head>
<body>
  <% include ./partials/header.ejs %>

  <main>
    <div class="user-details-box">
      <span><h3>User Details</h3></span><br>
      <form class="signup-form" action="/user/api/v1/newuser/create" method="post">
        <p id="error1"></p>
        <div class="input-block">
          <p>Username:</p>
          <input id="uname" class="input-box" type="text" name="username" placeholder="Username" autofocus autocomplete="off" required/>
          <span id="ik" class="glyphicon glyphicon-ok"></span>
          <span id="ir" class="glyphicon glyphicon-remove"></span>
        </div>
        <div class="input-block">
          <p>Email:</p>
          <input id="email" class="input-box" type="email" name="email" placeholder="Email" autocomplete="off" required/>
          <span id="ik1" class="glyphicon glyphicon-ok"></span>
          <span id="ir1" class="glyphicon glyphicon-remove"></span>
        </div>
        <div class="input-block">
          <p>Password:</p>
          <input id="pass" class="input-box" type="password" name="password" placeholder="Password" required/>
          <span id="ik2" class="glyphicon glyphicon-ok"></span>
          <span id="ir2" class="glyphicon glyphicon-remove"></span>
        </div><br>
        <button class="btn btn-primary btn-block" type="submit" name="submit">Signup</button><br>
      </form>
    </div>
  </main>

  <% include ./partials/footer.ejs %>

  <script src="/js/scriptForSignup.js"></script>
</body>
</html>
